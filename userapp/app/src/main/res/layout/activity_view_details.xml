<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.ViewDetailsActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_id_label"
        android:text="ID :"
        android:layout_weight="0.5"
        android:layout_margin="12dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_id"
        android:layout_weight="0.5"
        android:layout_margin="12dp"

        />

</LinearLayout>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_label_truck_reg_num"
        android:text="Tuck Reg Num :"
        android:layout_weight="0.5"
        android:layout_margin="12dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_truck_reg_num"
        android:layout_weight="0.5"
        android:layout_margin="12dp"

        />

  </LinearLayout>


   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_label_height"
        android:text="Height :"
        android:layout_weight="2"
        android:layout_margin="12dp"

         />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_height"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />

  </LinearLayout>



  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_label_length"
        android:text="Length :"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_length"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />

  </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_label_body_type"
        android:text="Body Type:"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_body_type"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />


   </LinearLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_label_tonnage"
        android:text="Tonnage :"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />

       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/a_tonnage"
        android:layout_weight="2"
        android:layout_margin="12dp"

        />

    </LinearLayout>

</LinearLayout>